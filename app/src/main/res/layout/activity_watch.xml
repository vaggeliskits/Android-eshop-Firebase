<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_watch"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vaggelis.unipipmsplishopping.WatchActivity">

    <TextView
        android:layout_gravity="center_horizontal"
        android:text="Watch List"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/watchviewEmail"
        android:layout_below="@+id/toolbarSet"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="60dp"
        android:id="@+id/listviewwatch">

    </ListView>



    <Button
        android:text="Logout"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:id="@+id/watchbuttonLogout"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/textViewUserEmail"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/gotobasket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/watchgotobasket"
        android:layout_alignParentStart="true"
        android:onClick="gotobasket" />
    <!--</LinearLayout>-->




</RelativeLayout>
