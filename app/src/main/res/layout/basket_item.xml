<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/common_google_signin_btn_icon_dark"
        android:id="@+id/basketimageViewimage"
        android:layout_alignTop="@+id/basketdescription"
        android:layout_alignParentStart="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="25dp"/>

    <RelativeLayout
        android:id="@+id/pricingSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/infoSection"
        android:orientation="vertical">


        </RelativeLayout>

    <TextView
        android:text="Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:id="@+id/basketitle" />



    <Button
        android:text="@string/basketmovebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/basketmovebutton"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/basketimageViewimage"
        android:layout_alignStart="@+id/basketimageViewimage" />

    <TextView
        android:text="price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/basketprice"
        android:layout_marginStart="27dp"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/basketmovebutton"
        android:layout_alignStart="@+id/basketmovebutton" />

    <TextView
        android:text="Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:id="@+id/basketdescription"
        android:layout_below="@+id/basketitle"
        android:layout_toEndOf="@+id/basketitle" />

</RelativeLayout>